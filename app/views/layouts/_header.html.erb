<div class="border-b bg-white">
  <div class="h-16 mx-auto px-5 flex items-center justify-between">
      <a class="text-2xl cursor-pointer custom-link">Trello</a>
      
      <ul class="flex items-center gap-5">
        <% if user_signed_in? %>
          <%= link_to "Dashboard", root_path, class: "custom-link" %>
          <%= link_to "New Board", new_board_path, class: "custom-link" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "custom-link" %>
        <% else %>
          <%= link_to "Register", new_user_registration_path, class: "custom-link" %>
          <%= link_to "Login", new_user_session_path, class: "custom-link" %>
        <% end %>
      </ul>
  </div>
</div>

